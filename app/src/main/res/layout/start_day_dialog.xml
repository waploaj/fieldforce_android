<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/titleCardView"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Start a Day"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorBackground" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/visitIdOneCard"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                    android:text="Visit One"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        <com.suke.widget.SwitchButton
                android:id="@+id/visitOne"
                android:layout_gravity="end|center_vertical"
                app:sb_checked_color="@color/colorPrimary"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorBackground" />

    <androidx.cardview.widget.CardView
            android:id="@+id/visitIdTwoCard"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Visit Two"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="14sp"
                    android:layout_margin="8dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        <com.suke.widget.SwitchButton
                android:id="@+id/visitTwo"
                android:layout_gravity="end|center_vertical"
                app:sb_checked_color="@color/colorPrimary"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBackground" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerProduct"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/button_corners"
            android:padding="16dp"
            android:drawablePadding="8dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableTint="@color/colorWhite"
            android:text="Register New Items"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_iconmonstr_shipping_box_8"
            android:drawableStart="@drawable/ic_iconmonstr_shipping_box_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start" />

</LinearLayout>