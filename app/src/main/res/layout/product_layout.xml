<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

   <android.support.v7.widget.CardView
           android:id="@+id/productCardView"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/separator"
           app:cardCornerRadius="0dp"
           app:cardElevation="0dp"
           android:background="?attr/selectableItemBackground"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       
       <android.support.constraint.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           
           <com.github.siyamed.shapeimageview.CircularImageView
                   android:id="@+id/productImageView"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_margin="8dp"
                   app:siBorderAlpha="0"
                   tools:src="@drawable/user"
                   android:layout_width="70dp"
                   android:layout_height="70dp"/>

           <TextView
                   android:id="@+id/stockLocation"
                   app:layout_constraintTop_toBottomOf="@id/productImageView"
                   app:layout_constraintStart_toStartOf="@id/productImageView"
                   app:layout_constraintEnd_toEndOf="@id/productImageView"
                   android:layout_marginTop="8dp"
                   tools:text="DC Stock"
                   android:textSize="12sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:id="@+id/productPrice"
                   app:layout_constraintTop_toBottomOf="@id/stockLocation"
                   app:layout_constraintStart_toStartOf="@id/productImageView"
                   app:layout_constraintEnd_toEndOf="@id/productImageView"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginBottom="8dp"
                   android:layout_marginTop="4dp"
                   tools:text="287466432"
                   android:textSize="12sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:id="@+id/productBarCode"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toEndOf="@id/productImageView"
                   android:layout_marginTop="24dp"
                   android:layout_marginStart="16dp"
                   android:layout_marginLeft="16dp"
                   tools:text="IT0001"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:id="@+id/productName"
                   tools:text="Test Product"
                   app:layout_constraintTop_toTopOf="@id/productBarCode"
                   app:layout_constraintStart_toEndOf="@id/productBarCode"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0"
                   android:layout_marginStart="8dp"
                   android:layout_marginLeft="8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:id="@+id/qtyLabel"
                   app:layout_constraintTop_toBottomOf="@id/productBarCode"
                   app:layout_constraintStart_toStartOf="@id/productBarCode"
                   android:layout_marginTop="10dp"
                   android:text="@string/qty"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           
           <EditText
                   app:layout_constraintTop_toBottomOf="@id/qtyLabel"
                   app:layout_constraintStart_toStartOf="@id/qtyLabel"
                   app:layout_constraintEnd_toStartOf="@id/guidelineOne"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="0dp"
                   android:layout_height="45dp"/>

           <android.support.constraint.Guideline
                   android:id="@+id/guidelineOne"
                   android:orientation="vertical"
                   app:layout_constraintGuide_percent="0.5"
                   android:layout_width="1dp"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:id="@+id/freeLabel"
                   app:layout_constraintTop_toTopOf="@id/qtyLabel"
                   app:layout_constraintStart_toEndOf="@id/guidelineOne"
                   app:layout_constraintEnd_toStartOf="@id/guidelineTwo"
                   android:text="@string/free"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <EditText
                   app:layout_constraintTop_toBottomOf="@id/freeLabel"
                   app:layout_constraintEnd_toStartOf="@+id/guidelineTwo"
                   app:layout_constraintStart_toEndOf="@id/guidelineOne"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="0dp"
                   android:layout_height="45dp"/>

           <android.support.constraint.Guideline
                   android:id="@+id/guidelineTwo"
                   android:orientation="vertical"
                   app:layout_constraintGuide_percent="0.8"
                   android:layout_width="1dp"
                   android:layout_height="wrap_content"/>

           <ImageButton
                   android:id="@+id/paymentType"
                   app:layout_constraintStart_toEndOf="@id/guidelineTwo"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:padding="10dp"
                   android:tint="@color/colorPrimary"
                   android:background="@android:color/transparent"
                   app:srcCompat="@drawable/ic_money"
                   android:contentDescription="@null"
                   android:layout_margin="8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <ImageButton
                   android:id="@+id/removeProduct"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/guidelineTwo"
                   app:layout_constraintVertical_bias="0"
                   app:layout_constraintHorizontal_bias="1"
                   android:tint="@color/gray"
                   android:background="@android:color/transparent"
                   app:srcCompat="@drawable/ic_close"
                   android:contentDescription="@null"
                   android:layout_margin="8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           
       </android.support.constraint.ConstraintLayout>

   </android.support.v7.widget.CardView>

    <View
            android:id="@+id/separator"
            app:layout_constraintTop_toBottomOf="@id/productCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

</android.support.constraint.ConstraintLayout>